<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1750882222548-1" author="camal">
        <createTable tableName="business">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_business"/>
            </column>
            <column name="business_name" type="VARCHAR(255)"/>
            <column name="business_location" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="active_status" type="BOOLEAN"/>
            <column name="logo_url" type="VARCHAR(255)"/>
            <column name="contact_mail" type="VARCHAR(255)"/>
            <column name="contact_number" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-2" author="camal">
        <createTable tableName="business_services">
            <column name="business_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="services_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-3" author="camal">
        <createTable tableName="comment">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_comment"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
            <column name="creation_at" type="DATETIME"/>
            <column name="service_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-4" author="camal">
        <createTable tableName="service">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_service"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="rating" type="DOUBLE"/>
            <column name="local_date_time" type="DATETIME"/>
            <column name="price" type="DOUBLE"/>
            <column name="totat_used_count" type="INT"/>
            <column name="business_id" type="BIGINT"/>
            <column name="image_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-5" author="camal">
        <createTable tableName="user">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="local_date_time" type="DATETIME"/>
            <column name="role" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="is_verified" type="BOOLEAN"/>
            <column name="avatar_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-6" author="camal">
        <createTable tableName="user_comments">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="comments_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-7" author="camal">
        <createTable tableName="user_services">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="services_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1750882222548-8" author="camal">
        <addUniqueConstraint columnNames="services_id" constraintName="uc_business_services_services"
                             tableName="business_services"/>
    </changeSet>
    <changeSet id="1750882222548-9" author="camal">
        <addUniqueConstraint columnNames="comments_id" constraintName="uc_user_comments_comments"
                             tableName="user_comments"/>
    </changeSet>
    <changeSet id="1750882222548-10" author="camal">
        <addUniqueConstraint columnNames="services_id" constraintName="uc_user_services_services"
                             tableName="user_services"/>
    </changeSet>
    <changeSet id="1750882222548-11" author="camal">
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="comment"
                                 constraintName="FK_COMMENT_ON_SERVICE" referencedColumnNames="id"
                                 referencedTableName="service"/>
    </changeSet>
    <changeSet id="1750882222548-12" author="camal">
        <addForeignKeyConstraint baseColumnNames="business_id" baseTableName="service"
                                 constraintName="FK_SERVICE_ON_BUSINESS" referencedColumnNames="id"
                                 referencedTableName="business"/>
    </changeSet>
    <changeSet id="1750882222548-13" author="camal">
        <addForeignKeyConstraint baseColumnNames="business_id" baseTableName="business_services"
                                 constraintName="fk_busser_on_business" referencedColumnNames="id"
                                 referencedTableName="business"/>
    </changeSet>
    <changeSet id="1750882222548-14" author="camal">
        <addForeignKeyConstraint baseColumnNames="services_id" baseTableName="business_services"
                                 constraintName="fk_busser_on_service" referencedColumnNames="id"
                                 referencedTableName="service"/>
    </changeSet>
    <changeSet id="1750882222548-15" author="camal">
        <addForeignKeyConstraint baseColumnNames="comments_id" baseTableName="user_comments"
                                 constraintName="fk_usecom_on_comment" referencedColumnNames="id"
                                 referencedTableName="comment"/>
    </changeSet>
    <changeSet id="1750882222548-16" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_comments"
                                 constraintName="fk_usecom_on_user" referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>
    <changeSet id="1750882222548-17" author="camal">
        <addForeignKeyConstraint baseColumnNames="services_id" baseTableName="user_services"
                                 constraintName="fk_useser_on_service" referencedColumnNames="id"
                                 referencedTableName="service"/>
    </changeSet>
    <changeSet id="1750882222548-18" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_services"
                                 constraintName="fk_useser_on_user" referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>

</databaseChangeLog>