<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1751004229211-21" author="camal">
        <dropForeignKeyConstraint baseTableName="business_services" constraintName="fk_busser_on_business"/>
    </changeSet>
    <changeSet id="1751004229211-22" author="camal">
        <dropForeignKeyConstraint baseTableName="business_services" constraintName="fk_busser_on_service"/>
    </changeSet>
    <changeSet id="1751004229211-23" author="camal">
        <dropForeignKeyConstraint baseTableName="comment" constraintName="fk_comment_on_service"/>
    </changeSet>
    <changeSet id="1751004229211-24" author="camal">
        <dropForeignKeyConstraint baseTableName="service" constraintName="fk_service_on_business"/>
    </changeSet>
    <changeSet id="1751004229211-25" author="camal">
        <dropForeignKeyConstraint baseTableName="user_services" constraintName="fk_useser_on_service"/>
    </changeSet>
    <changeSet id="1751004229211-26" author="camal">
        <dropForeignKeyConstraint baseTableName="user_services" constraintName="fk_useser_on_user"/>
    </changeSet>
    <changeSet id="1751004229211-1" author="camal">
        <createTable tableName="business_products">
            <column name="business_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="products_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1751004229211-2" author="camal">
        <createTable tableName="product">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="rating" type="DOUBLE"/>
            <column name="local_date_time" type="DATETIME"/>
            <column name="price" type="DOUBLE"/>
            <column name="totat_used_count" type="INT"/>
            <column name="business_id" type="BIGINT"/>
            <column name="image_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1751004229211-3" author="camal">
        <createTable tableName="refresh_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_refreshtoken"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1751004229211-4" author="camal">
        <createTable tableName="user_products">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="products_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1751004229211-5" author="camal">
        <addColumn tableName="user">
            <column name="email" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1751004229211-8" author="camal">
        <addColumn tableName="comment">
            <column name="user_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1751004229211-9" author="camal">
        <addUniqueConstraint columnNames="products_id" constraintName="uc_business_products_products"
                             tableName="business_products"/>
    </changeSet>
    <changeSet id="1751004229211-10" author="camal">
        <addUniqueConstraint columnNames="token" constraintName="uc_refreshtoken_token" tableName="refresh_token"/>
    </changeSet>
    <changeSet id="1751004229211-11" author="camal">
        <addUniqueConstraint columnNames="user_id" constraintName="uc_refreshtoken_user" tableName="refresh_token"/>
    </changeSet>
    <changeSet id="1751004229211-12" author="camal">
        <addUniqueConstraint columnNames="products_id" constraintName="uc_user_products_products"
                             tableName="user_products"/>
    </changeSet>
    <changeSet id="1751004229211-13" author="camal">
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="comment"
                                 constraintName="FK_COMMENT_ON_SERVICE" referencedColumnNames="id"
                                 referencedTableName="product"/>
    </changeSet>
    <changeSet id="1751004229211-14" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="comment" constraintName="FK_COMMENT_ON_USER"
                                 referencedColumnNames="id" referencedTableName="user"/>
    </changeSet>
    <changeSet id="1751004229211-15" author="camal">
        <addForeignKeyConstraint baseColumnNames="business_id" baseTableName="product"
                                 constraintName="FK_PRODUCT_ON_BUSINESS" referencedColumnNames="id"
                                 referencedTableName="business"/>
    </changeSet>
    <changeSet id="1751004229211-16" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="refresh_token"
                                 constraintName="FK_REFRESHTOKEN_ON_USER" referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>
    <changeSet id="1751004229211-17" author="camal">
        <addForeignKeyConstraint baseColumnNames="business_id" baseTableName="business_products"
                                 constraintName="fk_buspro_on_business" referencedColumnNames="id"
                                 referencedTableName="business"/>
    </changeSet>
    <changeSet id="1751004229211-18" author="camal">
        <addForeignKeyConstraint baseColumnNames="products_id" baseTableName="business_products"
                                 constraintName="fk_buspro_on_product" referencedColumnNames="id"
                                 referencedTableName="product"/>
    </changeSet>
    <changeSet id="1751004229211-19" author="camal">
        <addForeignKeyConstraint baseColumnNames="products_id" baseTableName="user_products"
                                 constraintName="fk_usepro_on_product" referencedColumnNames="id"
                                 referencedTableName="product"/>
    </changeSet>
    <changeSet id="1751004229211-20" author="camal">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_products"
                                 constraintName="fk_usepro_on_user" referencedColumnNames="id"
                                 referencedTableName="user"/>
    </changeSet>
    <changeSet id="1751004229211-29" author="camal">
        <dropTable cascadeConstraints="true" tableName="business_services"/>
    </changeSet>
    <changeSet id="1751004229211-30" author="camal">
        <dropTable cascadeConstraints="true" tableName="service"/>
    </changeSet>
    <changeSet id="1751004229211-31" author="camal">
        <dropTable cascadeConstraints="true" tableName="user_services"/>
    </changeSet>
    <changeSet id="1751004229211-32" author="camal">
        <dropColumn columnName="gmail" tableName="user"/>

        <dropColumn columnName="name" tableName="user"/>
    </changeSet>

</databaseChangeLog>